
<ol class="breadcrumb">
    <li><%- link_to('/blog/index.html', 'Blog') %></li>
    <li>/</li>
    <li class="active"><%- item.title %></li>
</ol>


<div class="row" id="post">

    <!-- article.meta -->
    <div class="span3">
        <%- partial('_partial/categories.ejs') %>
    </div>

    <!-- article main -->
    <div class="span9">

        <article class="<%= item.layout %>">
            <header>
                <div class="page-header">
                    <%- partial('post/title') %>
                </div>
                <!--div class="date"-->
                Date: <time datetime="<%= item.date.toDate().toISOString() %>">
                <span class="day"><%= item.date.format("DD") %></span> /
                <span class="month"><%= item.date.format("MM") %></span> /
                <span class="year"><%= item.date.format("YY") %></span>
            </time><br/>
                <!--/div-->
                Tags: <%- partial('post/tag') %>
                <!--div class="post-tags">
                </div-->

           </header>
            <div class="article-entry">
                <% if (item.excerpt && index){ %>
                <%- item.excerpt %>
                <% } else { %>
                <%- item.content %>
                <% } %>
            </div>
            <footer><div class="article-comment">
                <%- partial('comment') %>
            </div></footer>
        </article>
    </div>


</div>
