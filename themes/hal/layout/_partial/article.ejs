
<% if(is_post()) {%>
<ol class="breadcrumb">
    <li><%- link_to('/blog/index.html', 'Blog') %></li>
    <li>/</li>
    <li class="active"><%- item.title %></li>
</ol>
<% }%>

<article class="<%= item.layout %>">
  <div class="row">

    <!-- article.meta -->
    <div class="span2 article-meta">
      <div class="date">
        <time datetime="<%= item.date.toDate().toISOString() %>">
          <span class="day"><%= item.date.format("DD") %></span>
          <span class="month"><%= item.date.format("MM") %></span>
          <span class="year"><%= item.date.format("YYYY") %></span>
        </time>
      </div>
      <% if(is_post()) {%>
      <div class="post-tags">
        <%- partial('post/tag') %>
      </div>
      <% }%>
    </div>

    <!-- article main -->
    <div class="span10 article-main">
      <header><div class="page-header">
        <%- partial('post/title') %>
      </div></header>
      <div class="article-entry">
        <% if (item.excerpt && index){ %>
          <%- item.excerpt %>
        <% } else { %>
          <%- item.content %>
        <% } %>
      </div>
      <footer><div class="article-comment">
        <%- partial('comment') %>
      </div></footer>
    </div>
  </div>
</article>
