
<% if(is_post()) {%>
<ol class="breadcrumb">
    <li><%- link_to('/blog/index.html', 'Blog') %></li>
    <li>/</li>
    <li class="active"><%- item.title %></li>
</ol>
<% }%>

<article class="<%= item.layout %>">
  <div class="row">

    <!-- article.meta -->
    <div class="span2 article-meta">
      <div class="date"><time datetime="<%= item.date.toDate().toISOString() %>">
        <span class="label label-default" style="margin-left:15px; margin-top:15px">
            <%= item.date.format("D") %>
            <%=  item.date.format("MMM YYYY") %>
        </span>
      </time></div>
      <div class="article-tags">
        <%- partial('post/tag') %>
      </div>
    </div>

    <!-- article main -->
    <div class="span10 article-main">
      <header><div class="page-header">
        <%- partial('post/title') %>
      </div></header>
      <div class="article-entry">
        <% if (item.excerpt && index){ %>
          <%- item.excerpt %>
        <% } else { %>
          <%- item.content %>
        <% } %>
      </div>
      <footer><div class="article-comment">
        <%- partial('comment') %>
      </div></footer>
    </div>
  </div>
</article>
