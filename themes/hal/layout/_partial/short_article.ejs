
<article class="<%= item.layout %>">

    <header><div class="page-header">
        <%- partial('post/title') %>
    </div></header>
    <div class="article-entry">
        <% if (item.excerpt && index){ %>
        <%- item.excerpt %>
        <% } else { %>
        <%- item.content %>
        <% } %>
    </div>
    <footer><div class="article-comment">
        <%- partial('comment') %>
    </div></footer>

</article>

