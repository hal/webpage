
<div class="row">
    <!--Sidebar content-->
    <div class="span3">
        <%- sidebar(locals.page) %>
    </div>

    <!--Body content-->
    <div class="span9 article-main">
        <header>
            <div class="article-title">
                <%- partial('post/title') %>
            </div>
        </header>
        <div class="article-entry">
            <% if (item.excerpt && index){ %>
            <%- item.excerpt %>
            <% } else { %>
            <%- item.content %>
            <% } %>
        </div>
        <footer><div class="article-comment">
            <%- partial('comment') %>
        </div></footer>
    </div>
</div>
